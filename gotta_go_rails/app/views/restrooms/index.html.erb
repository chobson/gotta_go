<div class="page-header">
  <h1>Gotta Go?!</h1>
</div>

<div class='container'>
  <div class='row'>
    <ul class='list-group col-md-6'>
      <% @restrooms.each do |restroom| %>
        <%= link_to restroom.name, restrooms_path, class: "list-group-item list-group-item-#{restroom.available? ? 'success' : 'danger' }" %>
      <% end %>
    </ul>
  </div>
</div>
